
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<div class="d-flex flex-row gap-3 align-items-center">
    @if (SignInManager.IsSignedIn(User))
    {
        var user = await UserManager.GetUserAsync(User);
        if (user != null)
        {
            <a class="userToaccount" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">
                Hello, @(user.FirstName ?? "User")!
            </a>
            <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="/" method="post">
                <button type="submit" class="btn btn-link text-danger">Logout</button>
            </form>
        }
    }
    else
    {
        <a asp-area="Identity" asp-page="/Account/Register">Register</a>
        <a asp-area="Identity" asp-page="/Account/Login">Login</a>
    }
</div>


