@using SciencesTechnology.ViewModels.Dashboard;
@model UserViewModel

@{
    ViewData["Title"] = "User Details";
}

<h2>@Model.FirstName's Details</h2>

<div>
    <h3>User Information</h3>
    <dl class="row">
        <div>
            @if (Model.ProfileImagePath != null && Model.ProfileImagePath.Length > 0)
            {
                <img src="@Model.ProfileImagePath" alt="Profile Picture" class="" style="width: 200px; height: 200px;" />
            }
            else
            {
                <img src="~/assets2/img/default-profile.png" alt="Default Profile Picture" class="rounded-circle" style="width: 50px; height: 50px;" />
            }
        </div>
        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>

        <dt class="col-sm-2">FirstName</dt>
        <dd class="col-sm-10">@Model.FirstName</dd>

        <dt class="col-sm-2">LastName</dt>
        <dd class="col-sm-10">@Model.LastName</dd>
        
        <dt class="col-sm-2">Country</dt>
        <dd class="col-sm-10">@Model.Country</dd>

        <dt class="col-sm-2">State</dt>
        <dd class="col-sm-10">@Model.State</dd>

        <dt class="col-sm-2">Adress</dt>
        <dd class="col-sm-10">@Model.Address</dd>

        <dt class="col-sm-2">Registered date</dt>
        <dd class="col-sm-10">@Model.DateOfRegistration.ToString("dd/mm/yyyy")</dd>

        <dt class="col-sm-2">Last Updated date</dt>
        <dd class="col-sm-10">@Model.LastUpdatedDate.ToString("dd/mm/yyyy")</dd>

        <dt class="col-sm-2">Phone Number</dt>
        <dd class="col-sm-10">@Model.PhoneNumber</dd>

        <dt class="col-sm-2">Credits</dt>
        <dd class="col-sm-10">@Model.Credits</dd>
    </dl>
</div>

<a href="@Url.Action("ViewUsers", "Admin")" class="btn btn-primary">Back to User List</a>
