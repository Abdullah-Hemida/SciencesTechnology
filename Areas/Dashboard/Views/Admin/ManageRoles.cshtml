
@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>

@{
    ViewData["Title"] = "Manage Roles";
}

<h2>@ViewData["Title"]</h2>

<table class="table table-striped table-hover table-bordered datatable">
    <thead>
        <tr>
            <th>Role Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model)
        {
            <tr>
                <td>@role.Name</td>
                <td>
                    <form asp-action="DeleteRole" method="post" onsubmit="return confirm('Are you sure you want to delete this role?');">
                        <input type="hidden" name="roleId" value="@role.Id" />
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<h2>Create New Role</h2>

<form asp-action="CreateRole" method="post">
    <div class="form-group d-flex align-items-center gap-3">
        <label for="roleName">Role Name</label>
        <input type="text" id="roleName" name="roleName" class="form-control w-50" value="" />
        <button type="submit" class="btn btn-primary">+ Add New Role</button>
    </div>
    
</form>


